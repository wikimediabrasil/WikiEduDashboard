@import './_variables'
@import './modules/_notifications'

.container 
    margin-top 35px

    h1
        a
            text-decoration none

    .admin-links-grid
        display grid
        grid-template-columns 1fr 1fr
        gap 40px

        +below(tablet)
            grid-template-columns 1fr

    .admin-links-column
        background #fff
        overflow hidden
        box-shadow  0 1px 6px rgba(0,0,0,0.1)

        h2
            background #40ad90
            height 50px
            color #fff
            padding 15px 20px
            margin 0
            font-size 18px
            font-width 400

        ul 
            padding 20px
            margin 0

            li
                margin-bottom 5px
                list-style none
                padding 5px 12px
                border-left 3px solid transparent
                transition all 0.2s ease

                &:hover
                    background #f5f5f5
                    border-left-color #40ad90
                
                a
                    text-decoration none
                    font-weight 500

                    &:hover
                        color #40ad90
        